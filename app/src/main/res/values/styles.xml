<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="WhiteAccent">
        <item name="colorAccent">@color/bp</item>
    </style>

    <style name="inputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"/>

    <style name="myActionButtonStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:minWidth">24dp</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:width">40dp</item>
    </style>

    <style name="Widget.MyApp.Spinner" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/menu_bg</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="background">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="actionModeBackground">@color/white</item>
        <item name="fontFamily">@font/opensanbold</item>
        <item name="android:fontFamily">@font/opensanbold</item>
    </style>

    <style name="AppTheme.searchviews" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColorPrimary">@color/bp</item>
        <item name="android:textColorSecondary">@color/bp</item>
        <item name="background">@color/bp</item>
        <item name="colorControlNormal">@color/bp</item>
        <item name="actionModeBackground">@color/bp</item>
        <item name="fontFamily">@font/opensanbold</item>
        <item name="android:fontFamily">@font/opensanbold</item>
        <item name="searchHintIcon">@null</item>
    </style>


</resources>